{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:vue/essential", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "process": true,
    "gtag": true
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
