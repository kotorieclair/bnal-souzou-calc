html
  font-size: 6.25%

body
  background-color: #e4e4e4
  font-family: sans-serif
  font-size: $base-font-size

body, div, th, td, ul, li, h1, h2, h3
  margin: 0
  padding: 0
  line-height: 1

h1, h2, h3
  line-height: 1.5

h1
  @media $pc
    font-size: $base-font-size * 2

  @media $sp
    font-size: $base-font-size * 1.7

h2
  @media $pc
    font-size: $base-font-size * 1.5

  @media $sp
    font-size: $base-font-size * 1.3

h3
  @media $pc
    font-size: $base-font-size * 1.2

  @media $sp
    font-size: $base-font-size * 1.1

p, li
  margin: 0
  padding: 0
  line-height: 1.7

ul
  margin-left: 1.5em

a
  color: $color-link

select, input
  background-color: #fff
  border: 1px solid $color-gray-light
  box-sizing: border-box
  vertical-align: bottom

  @media $sp
    height: 2em

input
  padding: 2px

  @media $sp
    border-radius: 0

.bold
  font-weight: bold

.text-small
  font-size: 0.8em

.text-blue
  color: $color-blue

.text-red
  color: $color-red

.ex-margin-top
  margin-top: 10px

.ex-margin-bottom
  margin-bottom: 10px
