@require 'style/variables'
@require 'style/functions'
@require 'style/base'

.wrapper
  background-color: #fff
  margin: 0 auto

  @media $pc
    max-width: 1000px
    padding: 50px

  @media $sp
    padding: px2vw(0px)

.header
  @media $pc
    margin: 0 30px 30px

  @media $sp
    margin: 0 px2vw(20px) px2vw(20px)

  h1
    margin-bottom: 20px

.help
  margin: 50px 30px 0
  background-color: $color-main-light
  border: 1px dotted $color-main-dark
  box-shadow: 0 0 0 4px $color-main-light
  color: $color-gray
  padding: 15px 10px


  h2
    margin-bottom: 20px

  h3
    margin-bottom: 15px

  ul
    margin-bottom: 5px
    margin-top: @margin-bottom

  &_paragraph
    margin-bottom: 30px

    &:last-child
      margin-bottom: 0

  &_box
    background-color: rgba(#fff, 0.8)
    border-radius: 5px
    color: $color-gray
    margin: 10px
    padding: 10px
