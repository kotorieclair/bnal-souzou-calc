@require '../../style/variables'
@require '../../style/functions'
@require '../../style/mixins'

.ErrorMessage
  align-items: center;
  bottom: 0;
  display: flex;
  justify-content: center;
  left: 0;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 50;

  &_back
    background-color: rgba(#000, 0.5);
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 80;

  &_body
    background-color: $color-main-dark;
    color: #fff;
    flex: 0 0 auto;
    height: 200px;
    position: relative;
    width: 300px;
    z-index: 100;
