@require '../../style/variables'
@require '../../style/functions'

.BngoSlotDisplay
  table
    border-collapse: collapse
    width: 100%

  th, td
    border: 1px solid $color-main-dark
    height: 1em
    text-align: center

  th
    background-color: #fff
    padding: 5px

  td
    background-color: $color-main-light
    font-size: $base-font-size + 2rem
    padding: 7px 5px

  &_info
    color: $color-main-light
    padding: 5px
    margin-bottom: 7px
    text-align: center

    @media $pc
      align-items: flex-end
      display: flex

    &_bungo
      font-size: $base-font-size + 2rem
      flex: 0 1 40%
      min-height: 1em

    &_card
      font-size: $base-font-size + 2rem
      flex: 0 1 60%
      min-height: 1em

      @media $sp
        margin-top: 7px

  &_base
    th, td
      width: 20%

  &_battle
    th, td
      border-top: 0
      width: calc(100% / 3)

      span
        @media $sp
          display: block

        &:nth-child(2)
          @media $sp
            margin-top: 3px

  &_skill
    margin-top: 10px

    th
      width: 40%

    td
      font-size: $base-font-size
      width: 60%
