@require '../../style/variables'
@require '../../style/functions'

.BngoSlotInput
  input, select
    font-size: $base-font-size - 1rem

  &_bungo
    margin-bottom: 5px

  &_card
    margin-bottom: 10px

  &_label
    color: #fff
    font-size: $base-font-size - 1rem
    margin-bottom: 2px

  &_status
    display: flex

    @media $sp
      margin-bottom: 10px

    &_box
      margin-right: 3px

      &:last-child
        margin-right: 0

      @media $pc
        flex: 0 1 3.5em

      @media $sp
        flex: 0 1 20%

    &_name
      background-color: rgba(#fff, 0.5)
      display: block
      font-size: $base-font-size - 1rem
      padding: 3px 0
      text-align: center

    input
      min-width: 0
      width: 100%
